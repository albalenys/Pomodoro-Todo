<h2>Todo List</h2>

<p><%= link_to "Add New Task", new_task_path, class: "btn btn-secondary" %></p>

<ol>
  <% if @tasks.empty? %>
    <p>
      You currently don't have anything in your todo list.<br>
      Start striking out your tasks and goals today!
    </p>
  <% end %>
  <% @tasks.each do |task|%>
    <li>
      <%= task.text %>
        <ul>
          <li><%= link_to "Edit", edit_task_path(task) %></li>
          <li><%= link_to "Delete", task_path(task), method: "delete" %></li>
          <li><%= link_to "Start Timer", new_task_timer_path(task) %></li>
        </ul>
    </li>
  <% end %>
</ol>